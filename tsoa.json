{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "securityDefinitions": {
      "bearerAuth": {
        "name": "Authorization",
        "in": "header",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT Authorization header"
      }
    },
    "security": [{ "bearerAuth": [] }]
  },
  "routes": {
    "routesDir": "build"
  }
}
